/**
 * @fileoverview Firestore Security Rules for SnackingTV application.
 *
 * Core Philosophy:
 * This ruleset prioritizes authorization independence and secure list operations for authenticated users.
 *
 * Data Structure:
 * - /user_settings/{userSettingId}: Stores user-specific settings, accessible via userId.
 * - /users/{userId}: Stores user profile information.
 * - /videos/{videoId}: Stores video metadata and is publicly readable.
 * - /user_channels/{channelId}: Stores user-added channels, access controlled by userId.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Settings can be created and modified only by the authenticated user (userId match).
 * - Video metadata is publicly readable. Writes are not secured and should be secured in the next iteration.
 * - User channels can only be read, created, updated, or deleted by the owning user.
 *
 * Denormalization for Authorization:
 * - User settings and channel documents include a userId, eliminating the need for `get()` calls to the user document during authorization.
 *
 * Structural Segregation:
 * - User data, video metadata, and channels are stored in separate collections, enabling different access controls for each.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource (authenticated user).
     * @param {string} userId - The user ID to compare against the request's auth UID.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * @description Checks if the user is the owner and the resource exists.
     * @param {string} userId - The user ID to compare against the resource's userId.
     * @return {bool} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description User settings document rules.
     * @path /user_settings/{userSettingId}
     * @allow (create) - Authenticated user creates their own settings document.
     *    request.auth.uid: "user123",
     *    request.resource.data: { userId: "user123" }
     * @deny (create) - Authenticated user tries to create settings for another user.
     *    request.auth.uid: "user123",
     *    request.resource.data: { userId: "user456" }
     * @deny (update) -  Tries to modify the userId
     * @principle Enforces document ownership for writes, using userId.
     */
    match /user_settings/{userSettingId} {
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(resource.data.userId);
      allow delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }
    
    /**
     * @description User channel document rules.
     * @path /user_channels/{channelId}
     * @allow (list) - User can list their own channels.
     * @allow (create) - User can create a channel for themselves.
     * @allow (get, update, delete) - User can manage their own channel.
     * @principle Enforces document ownership for all operations.
     */
    match /user_channels/{channelId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description User profile document rules.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own profile document.
     *    request.auth.uid: "user123"
     *    userId: "user123"
     * @deny (create) - Authenticated user tries to create a profile for another user.
     *    request.auth.uid: "user123"
     *    userId: "user456"
     * @deny (list) - Prevents listing of all user documents.
     * @principle Restricts access to a user's own data tree, preventing unauthorized access and data leakage.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Video metadata document rules.
     * @path /videos/{videoId}
     * @allow (get, list) - Allows public read access to video metadata.
     * @deny (create, update, delete) - No write protection is defined
     * @principle Provides public read access to video metadata.
     */
    match /videos/{videoId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow update: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }
  }
}
